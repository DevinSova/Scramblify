{
    "manifest_version": 2,
    "name": "Scramblify",
    "version": "0.5",
  
    "description": "Scramble every word on the screen but still keep it readable.",
  
    "icons" : {
      "48" : "icons/icon.png",
      "96" : "icons/icon@2x.png"
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["./scrambler.js", "./substitute.js"]
      }
    ],

    "browser_action": {
      "default_popup": "options/options.html",
      "default_icon": {
        "16": "icons/button-16.png",
        "32": "icons/button-32.png"
      }
    }
  }